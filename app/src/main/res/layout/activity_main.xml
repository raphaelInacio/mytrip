<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <EditText android:id="@+id/editDistancia"
              android:layout_width="match_parent"
              android:layout_height="58dp"
              android:textColor="@color/colorText"
              android:textColorHint="@color/colorDarkGray"
              android:hint="@string/distancia"/>

    <EditText android:id="@+id/editPreco"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/preco"/>

    <EditText android:id="@+id/editAutonomia"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/autonomia"/>

    <TextView android:id="@+id/textResult"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="R$ 0,00"/>

    <Button android:id="@+id/buttonCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calcular"/>

</LinearLayout>